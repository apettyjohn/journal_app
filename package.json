{
  "name": "journal-app",
  "version": "0.1.0",
  "main": "public/electron.js",
  "description": "A place to store my thoughts",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
